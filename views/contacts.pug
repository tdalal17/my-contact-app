extends layout

block content
  .container
    h1 All Contacts

    // code for displaying contacts
    each contact in contacts
      .contact-box
        h2 #{contact.firstName} #{contact.lastName}
        p Email: #{contact.email}
        p Notes: #{contact.notes}
        p dateCreated #{contact.dateCreated}

        a(href=`/contacts/${contact.id}/edit`) Edit

        form(method='POST', action=`/contacts/${contact.id}/delete`)
          button(type='submit') Delete

    // Add the "Create New Contact" button
    a.btn.btn-primary(href='/contacts/new') Create New Contact